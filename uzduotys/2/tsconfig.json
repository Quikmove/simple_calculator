{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "lib": ["DOM", "ES2022"],
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "sourceMap": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noEmitOnError": false
  },
  "include": ["./**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
